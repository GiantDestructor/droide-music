<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: root.widget_state
        on_state: root.on_toggle(self)
        size_hint: None, 1
        width: "100dp"
    Button: 
        text: "Click!"
        font_name: "fonts/starjedi/Starjedi.ttf"
        on_press: root.presionado()
        disabled: not root.state
    Label:
        text: root.my_text
        font_name: "fonts/starjedi/Starjedi.ttf"
        font_size: "80dp"
    Switch:
        id: switch_state
        size_hint: None, 1
        width: "100dp"
        on_active: root.on_switch_active(self)
    Slider:
        id: my_slider
        disabled: not switch_state.active
        min: 0
        max: 100
        value: 50
        #on_value: root.on_slider_value(self)
        orientation: "vertical"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max: 100
            min: 0
            value: my_slider.value
    TextInput:
        id: textInput
        size_hint: None, 1
        width: "100dp"
        multiline: False
        on_text_validate: root.text_validate(self)
    Label:
        text: "Your name is " + root.text_input_str


        








