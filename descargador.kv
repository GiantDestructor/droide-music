Aplicacion:
<Aplicacion>:
    cols: 2
    #right, left, center
    #anchor_x: "center"
    #bottom, top, center
    #anchor_y: "top"

    Label:
        text: "Link"
        font_name:"fonts/starjedi/Starjedi.ttf"
        size_hint: None, 1
        width: "170dp"
    AnchorLayout:
        TextInput:
            id: textInput
            size_hint: None, None
            width: "100dp"
            height: "35dp"
            multiline: False 
            anchor_y: "center"
            on_text: root.URLS = self.text
    Label:
        text: "Descarga Album?"
        font_name:"fonts/starjedi/Starjedi.ttf"
        size_hint: None, 1
        width: "170dp"
    BoxLayout:
        orientation:"vertical"
        AnchorLayout
            ToggleButton:
                text: "si"
                size_hint: None, None
                width: "100dp"
                height: "100dp"
                anchor_x: "center"
                font_name:"fonts/starjedi/Starjedi.ttf"
        GridLayout:
            cols: 2
            Label:
                text: "Artista"
                font_name:"fonts/starjedi/Starjedi.ttf"

            AnchorLayout:
                TextInput:
                    id: textInput
                    size_hint: None, None
                    width: "300dp"
                    height: "35dp"
                    multiline: False 
                    anchor_y: "center"
                    on_text: root.nombre_del_artista = self.text

            Label:
                text: "Album"
                font_name:"fonts/starjedi/Starjedi.ttf"
            AnchorLayout:
                TextInput:
                    id: textInput
                    size_hint: None, None
                    width: "300dp"
                    height: "35dp"
                    multiline: False 
                    anchor_y: "center"
                    on_text: root.nombre_del_album = self.text
                    
    Label:
        text: ""
    
    Button:
        text: "Descargar"
        font_name:"fonts/starjedi/Starjedi.ttf"
        size_hint: None, None
        width: "100dp"
        height: "100dp"
        on_press: root.descargar_boton()


   

